{
  "tools": {
    "get_label": {
      "description": "Get a specific label from a repository.",
      "maps_to": "get_label",
      "server": "github-docker",
      "inputSchema": {
        "properties": {
          "name": {
            "description": "Label name.",
            "type": "string"
          },
          "owner": {
            "description": "Repository owner (username or organization name)",
            "type": "string"
          },
          "repo": {
            "description": "Repository name",
            "type": "string"
          }
        },
        "required": [
          "owner",
          "repo",
          "name"
        ],
        "type": "object"
      }
    }
  }
}

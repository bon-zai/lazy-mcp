{
  "tools": {
    "request_copilot_review": {
      "description": "Request a GitHub Copilot code review for a pull request. Use this for automated feedback on pull requests, usually before requesting a human reviewer.",
      "maps_to": "request_copilot_review",
      "server": "github-docker",
      "inputSchema": {
        "properties": {
          "owner": {
            "description": "Repository owner",
            "type": "string"
          },
          "pullNumber": {
            "description": "Pull request number",
            "type": "number"
          },
          "repo": {
            "description": "Repository name",
            "type": "string"
          }
        },
        "required": [
          "owner",
          "repo",
          "pullNumber"
        ],
        "type": "object"
      }
    }
  }
}

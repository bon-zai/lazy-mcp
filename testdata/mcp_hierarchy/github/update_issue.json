{
  "tools": {
    "update_issue": {
      "description": "Update an existing issue in a GitHub repository",
      "maps_to": "update_issue",
      "server": "github",
      "inputSchema": {
        "properties": {
          "assignees": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "body": {
            "type": "string"
          },
          "issue_number": {
            "type": "number"
          },
          "labels": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "milestone": {
            "type": "number"
          },
          "owner": {
            "type": "string"
          },
          "repo": {
            "type": "string"
          },
          "state": {
            "enum": [
              "open",
              "closed"
            ],
            "type": "string"
          },
          "title": {
            "type": "string"
          }
        },
        "required": [
          "owner",
          "repo",
          "issue_number"
        ],
        "type": "object"
      }
    }
  }
}
